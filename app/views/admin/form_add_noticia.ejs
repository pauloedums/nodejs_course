<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Notícia</title>
		</head>
	<body>

		<h1>Adicionar notícia</h1>

		<% if(validacao) { %>
			<ul>
				<% for(let valid of validacao) { %>
					<li>
						<%= valid.msg %>
					</li>
				<% } %>
			</ul>
		<% } %>


		<form action="noticias/salvar" method="POST">
			<table>
				<tr>
					<td>
						<label>Título</label>
						<input type="text" id="titulo" name="titulo" placeholder="Título da notícia">
					</td>
				</tr>
				<tr>
					<td>
						<label>Resumo</label>
						<input type="text" id="resumo" name="resumo" placeholder="Resumo da notícia">
					</td>
				</tr>
				<tr>
					<td>
						<label>Autor</label>
						<input type="text" id="autor" name="autor" placeholder="Autor da notícia">
					</td>
				</tr>
				<tr>
					<td>
						<label>Data dos fatos</label>
						<input type="date" id="data_noticia" name="data_noticia" placeholder="Data da notícia">
					</td>
				</tr>
				<tr>
					<td>
						<label>Notícia</label>
						<textarea type="text" id="noticia" name="noticia" placeholder="Descrição da notícia"></textarea>
					</td>
				</tr>
				<tr>
					<td>
						<input type="submit" 
						value="Enviar"
						>
					</td>
				</tr>
			</table>
		</form>

	</body>
</html>